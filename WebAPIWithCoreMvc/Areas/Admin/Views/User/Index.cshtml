@using Core.Utilities.Messages
@model List<Entities.Dtos.AppUser.AppUserDto>
@inject Core.Utilities.Localization.ILocalizationService _localizationService
<div class="col-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Fixed Header Table</h3>
            <div class="card-tools">
                <button type="submit" class="btn btn-default btn-xs float-right">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>@_localizationService[ResultCodes.LABEL_UserName]</th>
                        <th>@_localizationService[ResultCodes.LABEL_AppUserTypeName]</th>
                        @*  <th>Status</th>
                        <th>Reason</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.AppUserTypeName</td>
                        @* <td><span class="tag tag-danger">Denied</span></td>
                        <td>Bacon ipsum dolor sit amet salami venison chicken flank fatback doner.</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>