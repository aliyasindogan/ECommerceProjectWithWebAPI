@using Core.Utilities.Messages
@model IEnumerable<PageViewModel>
@inject Core.Utilities.Localization.ILocalizationService _localizationService
@{
    ViewData["Title"] = "List";
}
@*
    Page liste sayfası detayları düenlenecek.
    22.08.2023
*@
<div class="col-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">@_localizationService[ResultCodes.PAGETITLE_PageList]</h3>
            <div class="card-tools">
                <form asp-action="Add" asp-controller="AppUser" method="get">
                    <button type="submit" class="btn btn-default btn-xs float-right">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.PageID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PageLanguageID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PageName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParentPageName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PageURL)
                        </th>
                      
                        <th>
                            @Html.DisplayNameFor(model => model.PageTypeName)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.LanguageName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.PageID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageLanguageID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentPageName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageURL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LanguageName)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
